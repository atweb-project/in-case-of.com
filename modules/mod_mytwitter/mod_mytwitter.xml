	<files>
		<filename module="mod_mytwitter">mod_mytwitter.php</filename>
		<filename module="mod_mytwitter">index.html</filename>
		<filename module="mod_mytwitter">LICENSE.txt</filename>
		<folder module="mod_mytwitter">tmpl</folder>
	</files>

	<config>
		<fields name="params">
			<fieldset name="BASIC">
				<field name="vg_html" type="textarea" label="HTML widget from Twitter" description="Add HTML generated from your Twitter account" filter="raw" default="" cols="35" rows="10" />
			</fieldset>
			<fieldset name="advanced">
				<field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />

				<field
					name="vglayout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
	
			</fieldset>
		</fields>
	</config>
</extension>
